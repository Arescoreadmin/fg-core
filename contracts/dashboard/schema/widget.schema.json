{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["id", "version", "data_provider", "permissions", "refresh_policy", "degrade_ok", "render_hints"],
  "properties": {
    "id": {"type": "string", "minLength": 1},
    "version": {"type": "string", "minLength": 1},
    "data_provider": {"type": "string", "minLength": 1},
    "permissions": {
      "type": "object",
      "required": ["scopes", "admin_override_allowed", "tenant_safe"],
      "properties": {
        "scopes": {"type": "array", "items": {"type": "string"}},
        "admin_override_allowed": {"type": "boolean"},
        "tenant_safe": {"type": "boolean"}
      },
      "additionalProperties": false
    },
    "refresh_policy": {
      "type": "object",
      "required": ["interval_seconds"],
      "properties": {"interval_seconds": {"type": "integer", "minimum": 1}},
      "additionalProperties": false
    },
    "degrade_ok": {"type": "boolean"},
    "render_hints": {"type": "object"}
  },
  "additionalProperties": true
}
