{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Health check response schema.",
  "properties": {
    "request_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Request tracking ID",
      "title": "Request Id"
    },
    "service": {
      "description": "Service name",
      "title": "Service",
      "type": "string"
    },
    "status": {
      "description": "Service health status",
      "enum": [
        "ok",
        "degraded",
        "unhealthy"
      ],
      "title": "Status",
      "type": "string"
    },
    "timestamp": {
      "description": "Response timestamp",
      "format": "date-time",
      "title": "Timestamp",
      "type": "string"
    },
    "version": {
      "description": "Service version",
      "title": "Version",
      "type": "string"
    }
  },
  "required": [
    "status",
    "service",
    "version",
    "timestamp"
  ],
  "title": "HealthResponse",
  "type": "object"
}
