{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Audit event schema.",
  "properties": {
    "action": {
      "description": "Action performed",
      "title": "Action",
      "type": "string"
    },
    "actor": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Actor identifier",
      "title": "Actor"
    },
    "id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ],
      "description": "Audit event identifier",
      "title": "Id"
    },
    "ip": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Client IP address",
      "title": "Ip"
    },
    "meta": {
      "additionalProperties": true,
      "description": "Additional metadata",
      "title": "Meta",
      "type": "object"
    },
    "request_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Request tracking ID",
      "title": "Request Id"
    },
    "resource_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Resource identifier",
      "title": "Resource Id"
    },
    "resource_type": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Resource type",
      "title": "Resource Type"
    },
    "status": {
      "description": "Action outcome",
      "enum": [
        "success",
        "deny",
        "error"
      ],
      "title": "Status",
      "type": "string"
    },
    "tenant_id": {
      "description": "Tenant identifier",
      "title": "Tenant Id",
      "type": "string"
    },
    "ts": {
      "description": "Event timestamp (RFC3339)",
      "format": "date-time",
      "title": "Ts",
      "type": "string"
    },
    "user_agent": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Client user agent",
      "title": "User Agent"
    }
  },
  "required": [
    "id",
    "ts",
    "tenant_id",
    "action",
    "status",
    "meta"
  ],
  "title": "AuditEvent",
  "type": "object"
}
