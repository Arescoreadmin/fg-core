{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Audit log entry schema.",
  "properties": {
    "action": {
      "description": "Action performed",
      "title": "Action",
      "type": "string"
    },
    "actor": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Actor identifier",
      "title": "Actor"
    },
    "details": {
      "anyOf": [
        {
          "additionalProperties": true,
          "type": "object"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Additional details",
      "title": "Details"
    },
    "ip_address": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Client IP address",
      "title": "Ip Address"
    },
    "outcome": {
      "description": "Action outcome",
      "enum": [
        "success",
        "failure",
        "error"
      ],
      "title": "Outcome",
      "type": "string"
    },
    "request_id": {
      "description": "Request tracking ID",
      "title": "Request Id",
      "type": "string"
    },
    "resource": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Resource affected",
      "title": "Resource"
    },
    "resource_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Resource identifier",
      "title": "Resource Id"
    },
    "timestamp": {
      "description": "Event timestamp",
      "format": "date-time",
      "title": "Timestamp",
      "type": "string"
    },
    "user_agent": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Client user agent",
      "title": "User Agent"
    }
  },
  "required": [
    "timestamp",
    "request_id",
    "action",
    "outcome"
  ],
  "title": "AuditLogEntry",
  "type": "object"
}
