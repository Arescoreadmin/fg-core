{
  "enabled_connectors": ["slack"],
  "connector_scopes": {
    "slack": ["channels:history"],
    "google_drive": ["https://www.googleapis.com/auth/drive.readonly"]
  },
  "allowed_collections": ["rag-default"],
  "allowed_resources": {
    "slack": ["channel:security-alerts"],
    "google_drive": ["folder:incident-response"]
  },
  "retention": {"days": 30},
  "redaction_mode": "strict",
  "rate_limits": {
    "tenant_dispatch_per_minute": 60,
    "connector_dispatch_per_minute": 30,
    "failure_cooldown_threshold": 3,
    "failure_cooldown_seconds": 120
  }
}
